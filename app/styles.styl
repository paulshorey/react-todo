body
  margin: 0
  padding: 0
  background-color: #343d46

h1
  color: #ffffff

ul#list
  list-style-type: none
  margin: 0
  padding: 0
  margin-top: 10px

  li
    color: #ffffff

    &:hover
      cursor: pointer
      color: #cacaca

    &.checked
      text-decoration: line-through
      color: #cacaca

    &.unchecked
      text-decoration: none

#content
  padding: 10px

#add-item
  width: 200px
  height: 20px
  padding: 4px

#add-button
  height: 32px
  border: 0
  padding-left: 5px
  padding-right: 5px
  background: #8c8c8c
  margin-left: 2px
  font-weight: bold

  &:hover
    background: #b3b3b3